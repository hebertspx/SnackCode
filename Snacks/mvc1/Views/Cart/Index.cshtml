@model CartViewModel

<div class="Container">
    <div class="row">
        <img src="~/images/Full-Cart-icon.png">

        <div>
            <h4>Seu carrinho de compras : </h4>
        </div>

        <table class="table table-bordered tabled-striped">
            <thead>
                <tr>
                    <th>Quantidade</th>
                    <th>Lanche</th>
                    <th class="text-right">Pre√ßo</th>
                    <th class="text-right">Subtotal</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.Cart.CartItens)
                {
                    <tr>
                        <td class="text-center">@item.Qtd</td>
                        <td class="text-left">@item.Snack.Name</td>
                        <td class="text-right">@item.Snack.Price.ToString("c")</td>
                        <td class="text-right">@((item.Qtd * item.Snack.Price).ToString("c"))</td>
                        <td class="text-center">
                            <a asp-controller="Cart" asp-action="RemoveItemToCart"
                                asp-route-snackId="@item.Snack.SnackId"><img src="~/images/delete.png" alt=""></a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" , class="text-right">Total:</td>
                    <td class="text-right">@Model.CartTotal.ToString("c")</td>
                </tr>
            </tfoot>

        </table>

        <div class="text-right">
            <div class="btn-group">
                <a class="btn, btn-sucess" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn, btn-primary" asp-controller="Snack" asp-action="List">Continuar Comprando</a>
            </div>

        </div>
    </div>

</div>